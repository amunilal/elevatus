# Claude Alias: status
# Show comprehensive project status
# Usage: /status

echo "ğŸ“Š ElevatUs Project Status"
echo "========================="

# Version info
current_version=$(grep '"version"' package.json | sed 's/.*"version": *"\([^"]*\)".*/\1/')
release_date=$(grep 'releaseDate:' lib/version.ts | sed "s/.*releaseDate: '\([^']*\)'.*/\1/")
echo "ğŸ“¦ Version: $current_version (Released: $release_date)"

# Git info
echo "ğŸ”„ Branch: $(git branch --show-current)"
echo "ğŸ“ Last commit: $(git log -1 --pretty=format:'%h - %s (%cr)')"

# Working directory status
if [ -n "$(git status --porcelain)" ]; then
    echo "âš ï¸ Status: Modified files detected"
    git status --short | head -5
    file_count=$(git status --short | wc -l)
    if [ $file_count -gt 5 ]; then
        echo "... and $((file_count - 5)) more files"
    fi
else
    echo "âœ… Status: Clean working directory"
fi

# Environment
echo "ğŸ› ï¸ Node.js: $(node --version) | NPM: $(npm --version)"

# Recent activity
echo ""
echo "ğŸ“Š Recent commits:"
git log --oneline -3 | sed 's/^/  /'

echo ""
echo "ğŸŒ Production: https://elevatus-pm2nhzrfd-ashveer.vercel.app"
echo "âœ… Status check completed"